# API Configuration
VITE_API_URL=http://localhost:8000/api
VITE_API_TIMEOUT=10000

# Application Settings
VITE_APP_NAME=Student Portal
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# Feature Flags
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ANIMATIONS=true
VITE_MOCK_API=false

# Development
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug

# Backend URLs
VITE_BACKEND_URL=http://localhost:8000
VITE_WEBSOCKET_URL=ws://localhost:3000

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,zip,jpg,png

# Session
VITE_SESSION_TIMEOUT=3600000

# Database (for backend - not exposed to frontend)
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=studentportal
# DB_USER=root
# DB_PASSWORD=

# JWT Secret (for backend - not exposed to frontend)
# JWT_SECRET=your-secret-key-here
# JWT_EXPIRY=86400

# Email Configuration (for backend)
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USER=your-email@gmail.com
# MAIL_PASSWORD=your-password
# MAIL_FROM=noreply@studentportal.com

# Payment Gateway (for future implementation)
# RAZORPAY_KEY_ID=
# RAZORPAY_KEY_SECRET=
